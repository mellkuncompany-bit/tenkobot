rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function getAdmin() {
      return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data;
    }

    function belongsToOrganization(organizationId) {
      return isAdmin() && getAdmin().organizationId == organizationId;
    }

    // Get staff document for current user
    function getStaff() {
      let admin = getAdmin();
      return get(/databases/$(database)/documents/staffs/$(request.auth.uid)).data;
    }

    // Check if user has a specific role
    function hasRole(role) {
      return isAdmin() && getStaff().role == role;
    }

    function isOwner() {
      return isAdmin() && getStaff().role == 'owner';
    }

    function isManager() {
      return isAdmin() && getStaff().role == 'manager';
    }

    function isManagerOrOwner() {
      return isAdmin() && getStaff().role in ['manager', 'owner'];
    }

    function isDriver() {
      return isAdmin() && getStaff().role == 'driver';
    }

    // Organizations
    match /organizations/{orgId} {
      allow read: if belongsToOrganization(orgId);
      allow create: if isAuthenticated() && request.auth.uid == orgId;
      allow update, delete: if belongsToOrganization(orgId) && getAdmin().role == 'owner';
    }

    // Admins
    match /admins/{adminId} {
      allow read: if isAuthenticated() && request.auth.uid == adminId;
      allow create: if isAuthenticated() && request.auth.uid == adminId;
      allow update, delete: if false; // Only via server-side
    }

    // Staffs
    match /staffs/{staffId} {
      allow read: if isAdmin() && belongsToOrganization(resource.data.organizationId);
      allow create: if isAdmin() && belongsToOrganization(request.resource.data.organizationId);
      allow update, delete: if isAdmin() && belongsToOrganization(resource.data.organizationId);
    }

    // Work Templates
    match /workTemplates/{templateId} {
      allow read: if isAdmin() && belongsToOrganization(resource.data.organizationId);
      allow create: if isAdmin() && belongsToOrganization(request.resource.data.organizationId);
      allow update, delete: if isAdmin() && belongsToOrganization(resource.data.organizationId);
    }

    // Shifts
    match /shifts/{shiftId} {
      allow read: if isAdmin() && belongsToOrganization(resource.data.organizationId);
      allow create: if isAdmin() && belongsToOrganization(request.resource.data.organizationId);
      allow update, delete: if isAdmin() && belongsToOrganization(resource.data.organizationId);
    }

    // Attendance Records
    match /attendanceRecords/{recordId} {
      allow read: if isAuthenticated() && (
        (resource.data.staffId == request.auth.uid) || // Staff can read their own
        (isManagerOrOwner() && belongsToOrganization(resource.data.organizationId)) // Managers/Owners can read all
      );
      allow write: if isManagerOrOwner() && belongsToOrganization(resource.data.organizationId);
    }

    // Escalation Policies
    match /escalationPolicies/{policyId} {
      allow read: if isAdmin() && belongsToOrganization(resource.data.organizationId);
      allow create: if isAdmin() && belongsToOrganization(request.resource.data.organizationId);
      allow update, delete: if isAdmin() && belongsToOrganization(resource.data.organizationId);
    }

    // Notifications Log (read-only for admins)
    match /notificationsLog/{logId} {
      allow read: if isAdmin() && belongsToOrganization(resource.data.organizationId);
      allow write: if false; // Only via server-side
    }

    // Escalation Executions (read-only for admins)
    match /escalationExecutions/{executionId} {
      allow read: if isAdmin() && belongsToOrganization(resource.data.organizationId);
      allow write: if false; // Only via server-side
    }

    // Vehicles
    match /vehicles/{vehicleId} {
      allow read: if isAdmin() && belongsToOrganization(resource.data.organizationId);
      allow create: if isManagerOrOwner() && belongsToOrganization(request.resource.data.organizationId);
      allow update, delete: if isManagerOrOwner() && belongsToOrganization(resource.data.organizationId);
    }

    // Fuel Receipts
    match /fuelReceipts/{receiptId} {
      allow read: if isAdmin() && belongsToOrganization(resource.data.organizationId);
      allow create: if isAdmin() && belongsToOrganization(request.resource.data.organizationId);
      allow update: if isManagerOrOwner() && belongsToOrganization(resource.data.organizationId);
      allow delete: if isManagerOrOwner() && belongsToOrganization(resource.data.organizationId);
    }

    // Payroll Records
    match /payrollRecords/{recordId} {
      allow read: if isAuthenticated() && (
        (resource.data.staffId == request.auth.uid) || // Staff can read their own
        (isManagerOrOwner() && belongsToOrganization(resource.data.organizationId)) // Managers/Owners can read all
      );
      allow write: if isOwner() && belongsToOrganization(resource.data.organizationId); // Only owners can write
    }

    // Invoices
    match /invoices/{invoiceId} {
      allow read: if isAdmin() && belongsToOrganization(resource.data.organizationId);
      allow create: if isManagerOrOwner() && belongsToOrganization(request.resource.data.organizationId);
      allow update, delete: if isManagerOrOwner() && belongsToOrganization(resource.data.organizationId);
    }

    // Documents
    match /documents/{documentId} {
      allow read: if isAdmin() && belongsToOrganization(resource.data.organizationId);
      allow create: if isManagerOrOwner() && belongsToOrganization(request.resource.data.organizationId);
      allow update, delete: if isManagerOrOwner() && belongsToOrganization(resource.data.organizationId);
    }

    // Announcements
    match /announcements/{announcementId} {
      allow read: if isAdmin() && belongsToOrganization(resource.data.organizationId);
      allow create: if isManagerOrOwner() && belongsToOrganization(request.resource.data.organizationId);
      allow update, delete: if isManagerOrOwner() && belongsToOrganization(resource.data.organizationId);
    }
  }
}
