rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Documents uploaded by authenticated users
    match /documents/{organizationId}/{fileName} {
      // Allow authenticated users to upload documents to their organization
      allow write: if request.auth != null;

      // Allow authenticated users to read documents from their organization
      allow read: if request.auth != null;
    }

    // Other paths (deny all by default)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
